{
  "name": "Karaoke Time",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "features": {
    "ghcr.io/devcontainers/features/ffmpeg:1": {}
  },
  "postCreateCommand": "bash ./initialize_environment.sh",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "KaraokeTime",
        "terminal.integrated.profiles.linux": {
          "KaraokeTime": {
            "path": "/bin/zsh",
            "args": [
              "-i",
              "-c",
              "cd /workspaces/${localWorkspaceFolderBasename} && source demucs_env/bin/activate && exec zsh -i"
            ]
          }
        }
      }
    }
  }
}
